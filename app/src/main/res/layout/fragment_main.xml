<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.MainFragment">

    <LinearLayout
        android:id="@+id/msgBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ChatRecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="456dp" >

        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="auto"
            android:nextFocusDown="@id/imgBtnSend"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/msgChat"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="#B8C1B8"
                android:contextClickable="false"
                android:focusable="auto"
                android:hint="Kirjoita..."
                android:inputType="text"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="Testi tekstiÃ¤..."
                android:textColor="#000000"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/imgBtnSend"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:nextFocusLeft="@id/msgChat"
                android:src="@android:drawable/ic_media_play" />
        </LinearLayout>

    </LinearLayout>

    <!-- TODO: Update blank fragment layout -->

</FrameLayout>